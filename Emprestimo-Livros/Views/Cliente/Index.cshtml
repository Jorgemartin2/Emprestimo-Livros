@model List<Cliente>
@{
    ViewData["Title"] = "Clientes";
}
<h4>Clientes</h4>
<hr />
<a class="btn btn-primary" role="button" asp-controller="Cliente" asp-action="Adicionar">Novo usu√°rio</a>
<a class="btn btn-secondary" asp-controller="Home" asp asp-action="Index">Voltar</a>
<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
    </div>
    <br>
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="close">x</button>
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="close">x</button>
            @TempData["MensagemErro"]
        </div>
    }
    <br>
    <table class="table table-hover" id="table-client">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">CPF</th>
                <th scope="col">Celular</th>
                <th scope="col">Telefone Fixo</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (Cliente clientes in Model)
                {
                    <tr>
                        <td>@clientes.Nome</td>
                        <td>@clientes.Cpf</td>
                        <td>@clientes.Celular</td>
                        <td>@clientes.TelFixo</td>
                        <td>
                            <a role="button" class="btn btn-primary m-1" asp-route-id="@clientes.Id" asp-controller="Livro"
                                asp-action="Index">Livros</a>
                            <a role="button" class="btn btn-success m-1" asp-controller="Cliente" asp-action="Detalhes"
                                asp-route-id="@clientes.Id">Detalhes</a>
                            <a role="button" class="btn btn-danger m-1" asp-route-id="@clientes.Id" asp-controller="Cliente"
                                asp-action="ApagarConfirmacao">Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>