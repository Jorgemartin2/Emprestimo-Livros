@model Cliente
@{
    ViewData["Title"] = "Apagar Confirmação";
}
<div class="text-center">
    <h1>
        Deseja realmente apagar o cliente @Model.Nome ?
    </h1>
    <a role="button" class="btn btn-secondary" asp-controller="Cliente" asp-action="Index">Voltar</a>
    <a role="button" class="btn btn-danger" asp-route-id="@Model.Id" asp-controller="Cliente"
        asp-action="Apagar">Excluir</a>
</div>