@model Cliente
@{
    ViewData["Title"] = "Confirmação excluir cliente";
}
<div class="text-center">
    <h3>Deseja realmente excluir o cliente @Model.Nome ?</h3>
</div>
<div class="text-center">
    <a class="btn btn-primary btn-block" role="button" asp-controller="Cliente" asp-action="Index">Cancelar exclusão</a>
    <a class="btn btn-danger btn-block" role="button" asp-controller="Cliente" asp-action="Apagar">Confirmar exclusão</a>
</div>